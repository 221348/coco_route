<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#66BC7D"
    tools:context=".CompanyMain">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="16dp">

        <!-- 앱 로고 -->
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:src="@drawable/coco" />

        <!-- 검색창 추가 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="16dp"
            android:background="@drawable/rounded_background"

            android:padding="8dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- 검색 입력란 -->
            <EditText
                android:id="@+id/searchEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="검색어를 입력하세요"
                android:padding="8dp"
                android:textColor="#000000"
                android:textColorHint="#999999"
                android:background="@null" />

            <!-- 검색 버튼 추가 -->
            <Button
                android:id="@+id/searchButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="검색"
                android:textColor="#328F4B"
                android:background="@android:color/white"
                android:layout_marginStart="8dp"
                android:padding="8dp" />
        </LinearLayout>

        <!-- 기업 목록 추가 -->
        <LinearLayout
            android:id="@+id/companyList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- 1위부터 8위까지의 기업 순위 버튼 -->
            <Button
                android:id="@+id/button1"
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:text="TOP 1 삼성전자"
                android:textColor="#328F4B"
                android:background="@drawable/rounded_background"
                android:layout_marginBottom="15dp"
                android:padding="20dp" />

            <Button
                android:id="@+id/button2"
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:text="TOP 2 SK"
                android:textColor="#328F4B"
                android:background="@drawable/rounded_background"
                android:layout_marginBottom="15dp"
                android:padding="20dp" />

            <Button
                android:id="@+id/button3"
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:text="TOP 3 현대자동차"
                android:textColor="#328F4B"
                android:background="@drawable/rounded_background"
                android:layout_marginBottom="15dp"
                android:padding="20dp" />

            <Button
                android:id="@+id/button4"
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:text="TOP 4 LG"
                android:textColor="#328F4B"
                android:background="@drawable/rounded_background"
                android:layout_marginBottom="15dp"
                android:padding="20dp" />

            <Button
                android:id="@+id/button5"
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:text="TOP 5 롯데"
                android:textColor="#328F4B"
                android:background="@drawable/rounded_background"
                android:layout_marginBottom="15dp"
                android:padding="20dp" />

            <Button
                android:id="@+id/button6"
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:text="TOP 6 포스코"
                android:textColor="#328F4B"
                android:background="@drawable/rounded_background"
                android:layout_marginBottom="15dp"
                android:padding="20dp" />

            <Button
                android:id="@+id/button7"
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:text="TOP 7 한화"
                android:textColor="#328F4B"
                android:background="@drawable/rounded_background"
                android:layout_marginBottom="15dp"
                android:padding="20dp" />

            <Button
                android:id="@+id/button8"
                android:layout_width="330dp"
                android:layout_height="wrap_content"
                android:text="TOP 8 현대중공업"
                android:textColor="#328F4B"
                android:background="@drawable/rounded_background"
                android:layout_marginBottom="15dp"
                android:padding="20dp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
