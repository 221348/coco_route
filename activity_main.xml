<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#66BC7D"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:src="@drawable/coco" />

    <TextView
        android:id="@+id/textViewFootprintValue"
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:text="0"
        android:textSize="48sp"
        android:textColor="#328F4B"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/rounded_background" />


    <!-- Weekly Report Bar Chart -->

    <!-- Buttons -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="2"
        android:padding="10dp">

        <ImageButton
            android:id="@+id/buttonWalk"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:src="@drawable/walk"
            android:scaleType="centerInside"
            android:background="@drawable/rounded_background"
            android:contentDescription="Image description" />

        <ImageButton
            android:id="@+id/buttonBicy"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:src="@drawable/bicy"
            android:background="@drawable/rounded_background"
            android:scaleType="centerInside"
            android:contentDescription="Image description"/>

        <ImageButton
            android:id="@+id/buttonCar"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:src="@drawable/car"
            android:scaleType="centerInside"
            android:background="@drawable/rounded_background"
            android:contentDescription="Image description" />

        <ImageButton
            android:id="@+id/buttonBus"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:src="@drawable/bus"
            android:scaleType="centerInside"
            android:background="@drawable/rounded_background"
            android:contentDescription="Image description" />

        <ImageButton
            android:id="@+id/buttonSubway"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:src="@drawable/sub"
            android:scaleType="centerInside"
            android:background="@drawable/rounded_background"
            android:contentDescription="Image description" />

        <ImageButton
            android:id="@+id/buttonTrain"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:src="@drawable/train"
            android:scaleType="centerInside"
            android:background="@drawable/rounded_background"
            android:contentDescription="Image description"/>
    </GridLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="2"
        android:padding="10dp">

        <Button
            android:id="@+id/buttonStore"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="상점"
            android:layout_margin="8dp"
            android:background="@drawable/rounded_background"
            android:textColor="#328F4B" />

        <Button
            android:id="@+id/buttonCompany"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="기업"
            android:layout_margin="8dp"
            android:background="@drawable/rounded_background"
            android:textColor="#328F4B" />

        <Button
            android:id="@+id/buttonCommunity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="community"
            android:layout_margin="8dp"
            android:background="@drawable/rounded_background"
            android:textColor="#328F4B" />

        <Button
            android:id="@+id/buttonGuide"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:text="이용 안내"
            android:layout_margin="8dp"
            android:background="@drawable/rounded_background"
            android:textColor="#328F4B" />
    </GridLayout>

</LinearLayout>